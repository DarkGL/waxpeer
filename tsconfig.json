{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": [
      "es2017",
      "esnext",
      "es6"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}