{
  "name": "waxpeer",
  "version": "1.7.1",
  "description": "Waxpeer API wrapper for NodeJs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "npx tsc-watch --onSuccess \"node ./dist/test.js\"",
    "build": "npx tsc",
    "push": "npx tsc && npm publish --access public",
    "format": "npx @biomejs/biome format --write ./src",
    "lint": "npx @biomejs/biome lint --apply ./src",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skylight-ity/waxpeer.git"
  },
  "keywords": [
    "waxpeer",
    "steam",
    "p2p"
  ],
  "author": {
    "name": "Ihtiyor",
    "email": "ity@waxpeer.com",
    "url": "https://twitter.com/skylight_ity"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/skylight-ity/waxpeer/issues"
  },
  "homepage": "https://github.com/skylight-ity/waxpeer#readme",
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@types/qs": "^6.9.14",
    "@types/socket.io-client": "^3.0.0",
    "@types/ws": "^8.5.10",
    "husky": "^9.0.11",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/node": "^20.12.7",
    "qs": "^6.12.1",
    "socket.io-client": "^4.7.5",
    "undici": "^6.13.0",
    "ws": "^8.16.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "engines": {
    "node": ">=20.12.2"
  }
}
